@model GetABuddy.Web.Areas.Administration.ViewModels.CategoryViewModel
@{
	ViewBag.Title = "_Category";
}

<tr>
	@using (Html.BeginForm("Edit", "Category", FormMethod.Post, new { enctype = "multipart/form-data" }))
	{
		@Html.AntiForgeryToken()
		@Html.ValidationSummary(true)

		<td>@Html.TextBoxFor(m => m.Id)</td>
		<td>
			@Html.TextBoxFor(m => m.Name)
		</td>
		<td>
			<input type="submit" class="btn btn-success pull-left" value="Edit" />
		</td>
	}
	@using (Html.BeginForm("Delete", "Category", FormMethod.Post, new { enctype = "multipart/form-data" }))
	{
		@Html.AntiForgeryToken()
		@Html.ValidationSummary(true)

		<td>
			@Html.HiddenFor(m => m.Id)
			<input type="submit" class="btn btn-danger pull-left" value="Delete" />
		</td>
	}
</tr>
