@model GetABuddy.Web.ViewModels.Home.IndexViewModel
@{
	ViewBag.Title = "Home Page";
}
<h1>Events</h1>
<div class="row">
	@foreach (var ev in Model.Events)
	{
		<div class="col-md-4">
			<a href="@ev.Url">
				<h1>@ev.Name</h1>
			</a>
			<div>@ev.Category</div>
		</div>
		}
</div>
<h1>Categories</h1>
<div class="row">
	@foreach (var category in Model.Categories)
	{
		<div class="col-md-2">
			@category.Name
		</div>
		}
</div>



