@model GetABuddy.Web.ViewModels.Event.InputEventViewModel
@{
    ViewBag.Title = "Create";
}

@using (Html.BeginForm("Create", "Event", FormMethod.Post, new { @class = "form", enctype = "multipart/form-data" }))
{
	@Html.AntiForgeryToken()
	<h3>Create event</h3>
	@Html.ValidationSummary(true)
	<div class="form-group">
		<div class="col-md-12">
			@Html.TextBoxFor(m => m.Name, new { @class = "form-control", @placeholder = "Name of the event" })
		</div>
	</div>
	<div class="form-group">
		<div class="col-md-12">
			@Html.TextAreaFor(m => m.Description, new { @class = "form-control", @placeholder = "Enter description" })
		</div>
	</div>
	<div class="form-group">
		<div class="col-md-12">
			@Html.TextBoxFor(m => m.Time, new { @class = "form-control", @placeholder = "Enter description" })
		</div>
	</div>
	<div class="form-group">
		<div class="col-md-12">
			@Html.TextBoxFor(m => m.NumberOfParticipants, new { @class = "form-control", @placeholder = "Enter how many people do you need" })
		</div>
	</div>

	@Html.Partial("_CategoryDropDown", )

	<div class="form-group">
		<div class="col-md-offset-2 col-md-10">
			<input type="submit" class="btn btn-primary pull-left" value="Post Idea" />
		</div>
	</div>
}

